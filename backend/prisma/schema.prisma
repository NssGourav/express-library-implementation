generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

//i want this to many-many relationship with books
model Genre {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}
//this is one-many relationship 
model Book {
  id       Int    @id @default(autoincrement())
  title    String
  isbn     String @unique
  genreId Int
  authorId Int
  //We removed genreId because the foreign key restricts a book to linking to only one genre 
  // which violates the requirement for a many-to-many relationship.
  author   Author @relation(fields: [authorId], references: [id])
  genre   Genre  @relation(fields: [genreId], references: [id])
}